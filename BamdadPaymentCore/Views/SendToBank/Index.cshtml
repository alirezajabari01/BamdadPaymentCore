

@if (ViewBag.RefId == "")
{

    <!DOCTYPE html> 
    <html lang="en"> 
    <head> 
        <meta charset="UTF-8"> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <title>Error - Something Went Wrong</title> 
        <style> 
            body { 
            margin: 0; 
            font-family: Arial, sans-serif; 
            background: linear-gradient(to bottom right, #ff6b6b, #f7e8e8); 
            color: #333; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            height: 100vh; 
            } 

            .container { 
            text-align: center; 
            padding: 20px; 
            background: white; 
            border-radius: 12px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
            max-width: 600px; 
            margin: auto; 
            } 

            .error-icon { 
            font-size: 80px; 
            color: #ff6b6b; 
            } 

            .error-title { 
            font-size: 36px; 
            margin: 20px 0; 
            } 

            .error-message { 
            font-size: 18px; 
            color: #555; 
            margin: 10px 0 30px; 
            } 

            .button { 
            padding: 10px 20px; 
            font-size: 16px; 
            color: white; 
            background: #ff6b6b; 
            border: none; 
            border-radius: 8px; 
            cursor: pointer; 
            text-decoration: none; 
            } 

            .button:hover { 
            background: #ff4c4c; 
            } 
        </style> 
    </head> 
    <body> 
        <div class="container"> 
            <div class="error-icon">⚠️</div> 
            <div class="error-title">Oops! Something Went Wrong</div> 
            <div class="error-message"> 
                We encountered an error while processing your request.<br> 
                Please try again later or contact support. 
            </div> 
            <a href="/" class="button">Go Back to Home</a> 
        </div> 
    </body> 
    </html>
}else{

    <html>
    <body onload='document.forms["redirectForm"].submit()'>
        <form name='redirectForm' method='post' action='@ViewBag.GatewayUrl'>
            <input type='hidden' name='RefId' value='@ViewBag.RefId' />
        </form>
    </body>
    </html>
}